{
  "actions": [
    {
      "type": "compile-file",
      "id": "coffee",
      "name": "CoffeeScript",

      "input": "*.coffee",
      "output": "*.js",

      "cmdline": [
        "$(node)",
        "$(plugin)/scripts/compile-coffeescript.js",
        "$(additional)",
        "$(src_path)",
        "$(dst_path)"
      ]
    }
  ],
  "LRCompilers": [
    {
      "CommandLine": [
        "$(node)",
        "$(plugin)/scripts/compile-coffeescript.js",
        "$(additional)",
        "$(src_path)",
        "$(dst_path)"
      ],
      "DestinationExtension": "js",
      "Errors": [
        "Error: In ((file)), Parse error on line ((line)): ((message))\\n",
        "Error: In ((file)), ((message)) on line ((line))\\n"
      ],
      "Extensions": [
        "coffee",
        "litcoffee"
      ],
      "Name": "CoffeeScript",
      "ExpectedOutputDirectories": [
        "js",
        "javascript",
        "javascripts"
      ],
      "Options": [
        {
          "Id": "no-wrapper",
          "Type": "checkbox",
          "Title": "No wrapper (--bare)",
          "OnArgument": "--bare"
        },
        {
          "Id": "source-map",
          "Type": "checkbox",
          "Title": "Generate source map (--map)",
          "OnArgument": "--map"
        }
      ]
    }
  ]
}
