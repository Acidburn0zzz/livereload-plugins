{
  "LRCompilers": [
    {
      "CommandLine": [
        "$(node)",
        "$(plugin)/node_modules/stylus/bin/stylus",
        "$(additional)",
        "-o",
        "$(dst_dir)",
        "$(src_path)"
      ],
      "DestinationExtension": "css",
      "Errors": [
        "Error: ((file)):((line))\\n(?:\\s[^\\n]*\\n)*\\s*\\n((message))\\n",
        "\\w+Error: ((message))\\n"
      ],
      "Extensions": [
        "styl"
      ],
      "Name": "Stylus",
      "ExpectedOutputDirectories": [
        "css",
        "styles",
        "stylesheet",
        "stylesheets"
      ],
      "ImportRegExps": [
        "@import\\s*\"([^\"]+)\"",
        "@import\\s*'([^']+)'",
        "@import\\s*([\\w./-]+)"
      ],
      "DefaultImportedExts": [
        "styl"
      ],
      "NonImportedExts": [
        "css"
      ],
      "Options": [
        {
          "Id": "debug-info",
          "Type": "checkbox",
          "Title": "Emit debug info for FireStylus (--firebug)",
          "OnArgument": "--firebug"
        },
        {
          "Id": "compress",
          "Type": "checkbox",
          "Title": "Compressed output",
          "OnArgument": "--compress"
        },
        {
          "Id": "use-nib",
          "Type": "checkbox",
          "Title": "Use Nib (--use nib)",
          "OnArgument": "--use nib"
        },
        {
          "Id": "line-numbers",
          "Type": "checkbox",
          "Title": "Emit line numbers debug info (--line-numbers)",
          "OnArgument": "--line-numbers"
        },
        {
          "Id": "include-css",
          "Type": "checkbox",
          "Title": "Include regular css on @import (--include-css)",
          "OnArgument": "--include-css"
        }
      ]
    }
  ]
}
