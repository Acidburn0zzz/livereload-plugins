{
  "actions": [
    {
      "type": "compile-file",
      "id": "jade",
      "name": "Jade",

      "input": "*.jade",
      "output": "*.html",

      "cmdline": [
        "$(node)",
        "$(plugin)/jade_compiler.js",
        "$(additional)",
        "$(src_path)",
        "$(dst_path)"
      ],

      "errors": [
        { "pattern": "\\w+Error: ((file)):((line))\\n(?:\\s[^\\n]*\\n)*\\s*\\n((message))\\n" },
        { "pattern": "\\w+Error: ((message))\\n" }
      ],

      "options": [
        {
          "type": "popup",
          "id": "output-style",
          "label": "Output style:",
          "items": [
            { "id": "minified", "label": "Minified" },
            { "id": "pretty", "label": "Pretty", "args": ["-o", "{ pretty: true }"] }
          ]
        },
        {
          "type": "text-field",
          "id": "custom-options",
          "label": "Custom options:",
          "placeholder": "{ \"pretty\": true }",
          "args": "-o $(value)"
        },
        {
          "type": "text-field",
          "id": "custom-options-file",
          "label": "Custom options file:",
          "placeholder": "jade-options.json",
          "args": "--options-file $(value)"
        }
      ]
    }
  ],

  "LRCompilers": [
    {
      "CommandLine": [
        "$(node)",
        "$(plugin)/jade_compiler.js",
        "$(additional)",
        "$(src_file)",
        "$(dst_path)"
      ],
      "RunIn": "$(src_dir)",
      "DestinationExtension": "html",
      "Optional": true,
      "Errors": [
        "\\w+Error: ((file)):((line))\\n(?:\\s[^\\n]*\\n)*\\s*\\n((message))\\n",
        "\\w+Error: ((message))\\n"
      ],
      "ExpectedOutputDirectories": [
        "html",
        "view",
        "views"
      ],
      "Extensions": [
        "jade"
      ],
      "ImportRegExps": [
        "include ([\\w./]+)",
        "extends ([\\w./]+)"
      ],
      "DefaultImportedExts": [
        "jade"
      ],
      "Name": "Jade",
      "Options": [
        {
          "Id": "output-style",
          "Type": "select",
          "Items": [
            {
              "Id": "minified",
              "Title": "Minified output style"
            },
            {
              "Id": "pretty",
              "Title": "Pretty output style",
              "Argument": ["-o", "{ pretty: true }"]
            }
          ]
        },
        {
          "Id": "custom-options",
          "Type": "edit",
          "Label": "Custom options:",
          "Placeholder": "{ \"pretty\": true }",
          "Argument": "-o $(value)",
          "SkipIfEmpty": true
        },
        {
          "Id": "custom-options-file",
          "Type": "edit",
          "Label": "Custom options file:",
          "Placeholder": "jade-options.json",
          "Argument": "--options-file $(value)",
          "SkipIfEmpty": true
        }
      ]
    }
  ]
}
