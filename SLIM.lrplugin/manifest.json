{
  "actions": [
    {
      "type": "compile-file",
      "id": "slim",
      "name": "Slim",

      "input": "*.slim",
      "output": "*.html",

      "packageConfigurations": [
        {
          "packages": [
            { "type": "gem", "name": "slim", "version": "*" }
          ]
        }
      ],

      "defaults": [
        {
          "requirements": [
            { "type": "gem", "name": "slim", "versions": "*" }
          ],

          "cmdline": [
            "$(ruby)",
            "$(plugin)/gem/bin/slimrb",
            "_$(gem_slim_ver)_",
            "$(additional)",
            "$(src_path)",
            "$(dst_path)"
          ],

          "errors": [
          ],

          "options": [
            {
              "type": "popup",
              "id": "output-style",
              "label": "Output style:",
              "items": [
                { "id": "minified", "label": "Minified" },
                { "id": "pretty", "label": "Pretty", "args": "--pretty" }
              ]
            },
            {
              "type": "checkbox",
              "id": "sections",
              "label": "Logic-less sections mode",
              "args": "--sections"
            },
            {
              "type": "checkbox",
              "id": "sections",
              "label": "Generate Rails-compatible code",
              "args": "--rails"
            },
            {
              "type": "checkbox",
              "id": "sections",
              "label": "Compile only but do not run",
              "args": "--compile"
            }
          ]
        }
      ]
    }
  ],

  "LRCompilers": [
    {
      "Name": "Slim",
      "Extensions": ["slim"],
      "DestinationExtension": "html",
      "Optional": true,
      "CommandLine": [
        "$(ruby)",
        "-I$(plugin)/lib/temple/lib",
        "-I$(plugin)/lib/tilt/lib",
        "$(plugin)/lib/slim/bin/slimrb",
        "$(additional)",
        "$(src_path)",
        "$(dst_path)"
      ],
      "Errors": [],
      "ExpectedOutputDirectories": [
        "html",
        "view",
        "views"
      ],
      "Options": [
        {
          "Id": "output-style",
          "Type": "select",
          "Items": [
            {
              "Id": "minified",
              "Title": "Minified output style"
            },
            {
              "Id": "pretty",
              "Title": "Pretty output style (--pretty)",
              "Argument": "--pretty"
            }
          ]
        },
        {
          "Id": "sections",
          "Type": "checkbox",
          "Title": "Logic-less sections mode (--sessions)",
          "OnArgument": "--sections"
        },
        {
          "Id": "sections",
          "Type": "checkbox",
          "Title": "Generate Rails-compatible code (--rails)",
          "OnArgument": "--rails"
        },
        {
          "Id": "sections",
          "Type": "checkbox",
          "Title": "Compile only but do not run (--compile)",
          "OnArgument": "--compile"
        }
      ]
    }
  ]
}
