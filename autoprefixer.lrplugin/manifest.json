{
  "manifest_version": 2,
  "actions": [
    {
      "type": "filter",
      "id": "autoprefixer",
      "objc_class": "AutoprefixerAction",
      "input": "*.css",

      "cmdline": [
        "$(node)",
        "$(plugin)/node_modules/.bin/autoprefixer",
        "$(additional)",
        "$(src_path)"
      ],

      "options": [
        {
          "type": "text-field",
          "id": "browsers",
          "label": "Browser spec:",
          "placeholder": "> 1%, last 2 versions, ff 17, opera 12.1",
          "args": "--browsers $(value)",
          "skip-if-empty": true
        }
      ]
    },
  ]
}
